<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1>Mini Messageboard</h1>
  <ul>
    <% messages.forEach(message => { %>
      <li>
        <strong><%= message.user %>:</strong> <%= message.text %> <em>(<%= message.added.toLocaleString() %>)</em>
        <a href="/message/<%= messages.indexOf(message) %>">Open</a>
      </li>
    <% }); %>
  </ul>
  <a href="/new">Add a new message</a>
</body>
</html>
